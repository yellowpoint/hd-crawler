model Page {
  id        Int       @id @default(autoincrement())
  title     String
  url       String    @unique
  content   String
  createdAt DateTime  @default(now())
  SubLink   SubLink[]
  urlsCount Int?
}

model SubLink {
  id        Int      @id @default(autoincrement())
  page      Page     @relation(fields: [pageId], references: [id])
  pageId    Int
  url       String   @unique
  content   String
  createdAt DateTime @default(now())
}

model google {
  id             Int      @id @default(autoincrement())
  keyword        String   @unique
  level          Int?
  parentKeywords String?
  content        String
  createdAt      DateTime @default(now())
}

model base {
  id        Int      @id @default(autoincrement())
  url       String   @unique
  content   String
  createdAt DateTime @default(now())
}
